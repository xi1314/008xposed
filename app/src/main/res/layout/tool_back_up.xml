<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@id/linearLayout1" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <EditText android:id="@id/tool_back_up_edit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:editable="false" android:layout_weight="1.0" />
        <Button android:id="@id/tool_back_up_set" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="设置应用" />
    </LinearLayout>
    <FrameLayout android:id="@id/frameLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <ListView android:id="@id/tool_back_up_listView" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="50.0dip" />
        <RelativeLayout android:id="@id/relativeLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <Button android:id="@id/tool_back_up_backUp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="备份" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" />
            <Button android:id="@id/tool_back_up_deleteSelect" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="删除所选" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" />
            <Button android:id="@id/tool_back_up_selectOther" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="反选" android:layout_toLeftOf="@id/tool_back_up_deleteSelect" android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>